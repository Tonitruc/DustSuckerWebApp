@page
@model DustSuckerWebApp.Pages.Catalog.IndexModel

@{
    ViewData["Title"] = "Каталог";
}

<div class="container mt-4">
    <div class="row">
        <!-- Левая колонка (Фильтр) -->
        <aside class="col-md-3">
            <div class="card p-3">
                <h5>Фильтры</h5>
                <input type="text" class="form-control mb-3" placeholder="Поиск по фильтрам">
                <label>Цена</label>
                <input type="range" class="form-range">
                <button class="btn btn-primary w-100 mt-3">Применить</button>
            </div>
        </aside>

        <!-- Правая колонка (Объявления) -->
        <main class="col-md-9">
            <div class="row ad-list-container">
                @foreach(var ad in Model.Advertisements)
                {
                    @await Html.PartialAsync("_AdvertisementItem", ad)
                }
            </div>
        </main>
    </div>
</div>

